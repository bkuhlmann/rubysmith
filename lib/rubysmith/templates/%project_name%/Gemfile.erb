ruby file: ".ruby-version"

source "https://rubygems.org"

<% if settings.build_bootsnap %>
  gem "bootsnap", "~> 1.18"
<% end %>
<% if settings.build_monads %>
  gem "dry-monads", "~> 1.8"
<% end %>
<% if settings.build_refinements %>
  gem "refinements", "~> 13.0"
<% end %>
<% if settings.build_zeitwerk %>
  gem "zeitwerk", "~> 2.7"
<% end %>

group :quality do
  <% if settings.build_caliber %>
    gem "caliber", "~> 0.74"
  <% end %>
  <% if settings.build_git && settings.build_git_lint %>
    gem "git-lint", "~> 9.0"
  <% end %>
  <% if settings.build_reek %>
    gem "reek", "~> 6.5", require: false
  <% end %>
  <% if settings.build_simple_cov %>
    gem "simplecov", "~> 0.22", require: false
  <% end %>
end

group :development do
  <% if settings.build_rake %>
    gem "rake", "~> 13.2"
  <% end %>
  <% if settings.markdown? %>
    gem "tocer", "~> 18.7"
  <% end %>
end

group :test do
  <% if settings.build_rspec %>
    gem "rspec", "~> 3.13"
  <% end %>
end

group :tools do
  <% if settings.build_amazing_print %>
    gem "amazing_print", "~> 1.7"
  <% end %>
  <% if settings.build_debug %>
    gem "debug", "~> 1.10"
  <% end %>
  <% if settings.build_irb_kit %>
    gem "irb-kit", "~> 1.1"
  <% end %>
  <% if settings.build_rtc %>
    gem "repl_type_completor", "~> 0.1"
  <% end %>
end
