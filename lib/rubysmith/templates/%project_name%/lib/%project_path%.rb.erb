<% if configuration.build_zeitwerk %>
  require "zeitwerk"
  <% if configuration.project_path.include? "/" %>
    loader = Zeitwerk::Loader.new
    loader.push_dir "#{__dir__}/.."
    loader.setup
  <% else %>
    loader = Zeitwerk::Loader.for_gem
    loader.setup
  <% end %>
<% end %>
