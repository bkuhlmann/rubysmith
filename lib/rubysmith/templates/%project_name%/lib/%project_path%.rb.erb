<% if configuration.build_zeitwerk %>
  require "zeitwerk"
  <% if configuration.project_path.include? "/" %>
    Zeitwerk::Loader.new.then do |loader|
      loader.push_dir "#{__dir__}/.."
      loader.setup
    end
  <% else %>
    Zeitwerk::Loader.for_gem.setup
  <% end %>
<% end %>
# Main namespace.
<% namespace %>
